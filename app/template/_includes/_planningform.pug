.question-form(id="planing-form")
  .question-form__wrap
    header.popup-header
      .popup-header__close &#10006;
      h2.popup-header__title Двухкомнатная квартира
    form.planing-choose-form(id="planing-choose-form" role="form" action="mail.php" method="post")
      .planing-choose-form__inner
        .planing-choose-form__left
          .plan
            .plan__foto
              img.plan__img(src="/img/8.png")
        .planing-choose-form__right
          .planing-choose-form__about
            h2.planing-choose-form__title Подъезд 1, этаж 3
            .planing-choose-form__line
              p.planing-choose-form__parag Общая жилая площадь
              p.planing-choose-form__parag Жилая площадь
            .planing-choose-form__line
              p.planing-choose-form__parag Общая комната
              p.planing-choose-form__parag Спальня
              p.planing-choose-form__parag Кухня
          h2.planing-choose-form__main-title
          input.planing-choose-form__input(name="name" placeholder="Ваше имя" type="text")
          input.planing-choose-form__input(name="call" placeholder="Ваш телефон" type="tel")
          input.planing-choose-form__btn(name="" value="Узнать стоимость" type="submit")